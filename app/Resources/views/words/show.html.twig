{% extends 'base.html.twig' %}

{% block body %}
    <h1>Words</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ word.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ word.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ word.description }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{% if word.published %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('_edit', { 'id': word.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
